{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx", // Ensures JSX is typed as React.createElement calls
    "lib": ["dom", "es2020"],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}